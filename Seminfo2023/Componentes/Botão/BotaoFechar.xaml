<UserControl x:Class="Componentes.BotaoFechar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Componentes"
             mc:Ignorable="d" 
             d:DesignHeight="55" d:DesignWidth="55">
    <Grid>
        <Button x:Name="CloseApp"
                Background="Transparent"
                Click="CloseApp_Click"
                MouseLeave="CloseApp_MouseLeave"
                MouseEnter="CloseApp_MouseEnter" BorderBrush="{x:Null}" Foreground="{x:Null}">
            <local:Icon x:Name="Icone" IconeVinculado="PowerOff" Background="Transparent" Margin="-22, 0,0,0" HorizontalAlignment="Left"/>
        </Button>
    </Grid>
</UserControl>
