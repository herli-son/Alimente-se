<UserControl x:Class="Componentes.BotaoNavegacao"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Componentes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Estilos/Estilos.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <local:Btn Style="{StaticResource BtnStyle}" x:Name="Botao" GroupName="Nav">
            <Grid>

                <local:Icon x:Name="Icone" IconeVinculado="Android" />

                <TextBlock x:Name="Texto" Text="Teste" Style="{StaticResource Text_Style}" />

            </Grid>
        </local:Btn>
    </Grid>
</UserControl>
