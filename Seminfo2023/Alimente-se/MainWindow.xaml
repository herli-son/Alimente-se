<Window x:Class="Alimente_se.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Alimente_se"
        xmlns:controles="clr-namespace:Componentes;assembly=Componentes"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="850" 
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent">

    <Grid>

        <!--// Window Border //-->

        <Border Background="#212529"
                CornerRadius="20" />

        <Grid>

            <!--// Base Grid //-->

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="228" />
                <ColumnDefinition Width="622" />
            </Grid.ColumnDefinitions>

            <!--// Navigation Panel //-->
            <controles:Navegacao x:Name="Nav" HorizontalAlignment="Left"/>
            <!--// Content //-->
            <controles:Conteudo Grid.Column="1" x:Name="Pages"/>
            <!--// Close //-->
            <controles:BotaoFechar x:Name="Fechar" HorizontalAlignment="Right" VerticalAlignment="Top" Height="40" Width="40" Margin="0,15,15,0" Grid.Column="1"/>

        </Grid>

    </Grid>
</Window>
