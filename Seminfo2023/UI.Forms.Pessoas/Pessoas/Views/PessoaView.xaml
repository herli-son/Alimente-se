<Page x:Class="UI.Forms.Pessoas.Pessoas.Views.PessoaView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI.Forms.Pessoas.Pessoas.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PessoaView">

    <Grid>
        <StackPanel Margin="10">
            <StackPanel Margin="40,0,40,30">
                <Label Content="Teste Label" />
                <TextBox x:Name="txbTeste" Height="20"/>
            </StackPanel>
            <StackPanel Margin="40,0,40,30" HorizontalAlignment="Center">
                <DataGrid x:Name="dtgPropriedades" ItemsSource="{Binding Itens}" CanUserAddRows="False"/>
            </StackPanel>
            <Button Content="Buscar" Width="60" Height="30" Margin="0,25,0,0" Command="{Binding Buscar}"/>
        </StackPanel>
    </Grid>
</Page>
